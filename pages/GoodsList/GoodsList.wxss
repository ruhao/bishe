.section {
  background: #f0f0f0;
  height: 100%;
  background-size: cover;
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: column;
  color: white;
}
.topname{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: black;
  text-align: center;
  border-bottom:2px solid gray 
}
.content{
  overflow-y: scroll;
}
.goodslist{
  height: 150rpx;
  margin-top: 20rpx;
  background: white;
  position: relative;
  display: flex;
  width: 100%;
  color: black;
  font-size:14px;
} 
.goodslist:nth-of-type(1){
  margin-top: 0;
}
.img{
  width: 75rpx;
  height: 75rpx;
  border: 2px solid gray;
  border-radius: 50%;
  position: relative;
  top:37.5rpx;
  left: 37.5rpx;
  overflow: hidden;
}
.img image{
  height: 100%;
  width: 100%
}
.goodsname{
  margin-left: 37rpx;
  width: 305rpx;
  height: 90rpx;
  padding: 30rpx 0rpx 30rpx 10px;
}
.date{
  margin-left: 37rpx;
  width: 315rpx;
  height: 90rpx;
  padding: 30rpx 0rpx;
}
.goodsname view{
  line-height: 45rpx;
}
.date view{
  line-height: 45rpx;
}